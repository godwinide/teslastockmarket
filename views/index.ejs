    <!-- Custom Tesla Stock Ticker Animation -->
    <script>
        // Simulate real-time stock price updates
        function updateStockPrice() {
            const ticker = document.querySelector('.stock-ticker');
            const basePrice = 248.50;
            const variation = (Math.random() - 0.5) * 10;
            const newPrice = (basePrice + variation).toFixed(2);
            const change = variation.toFixed(2);
            const changePercent = (variation / basePrice * 100).toFixed(2);
            
            const isPositive = variation >= 0;
            ticker.style.background = isPositive ? 'rgba(0, 150, 0, 0.8)' : 'rgba(220, 20, 60, 0.8)';
            ticker.innerHTML = `📈 TSLA: $${newPrice} (${isPositive ? '+' : ''}${changePercent}%)`;
        }
        
        // Update every 5 seconds
        setInterval(updateStockPrice, 5000);
    </script>
